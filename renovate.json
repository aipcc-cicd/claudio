{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Claude Code CLI version",
      "managerFilePatterns": [
        "Containerfile"
      ],
      "matchStrings": [
        "ENV\\s+CLAUDE_V\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "npm",
      "depNameTemplate": "@anthropic-ai/claude-code",
      "autoReplaceStringTemplate": "ENV CLAUDE_V {{newValue}}"
    },
    {
      "customType": "regex",
      "description": "Update Google Cloud SDK version",
      "managerFilePatterns": [
        "Containerfile"
      ],
      "matchStrings": [
        "ENV\\s+GCLOUD_V\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "google/cloud-sdk",
      "autoReplaceStringTemplate": "ENV GCLOUD_V {{newVersion}}"
    },
    {
      "customType": "regex",
      "description": "Update glab CLI version",
      "managerFilePatterns": [
        "Containerfile"
      ],
      "matchStrings": [
        "ENV\\s+GLAB_V\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gitlab-org/cli",
      "extractVersionTemplate": "^v?(?<version>\\d+\\.\\d+\\.\\d+)$",
      "autoReplaceStringTemplate": "ENV GLAB_V {{newVersion}}"
    },
    {
      "customType": "regex",
      "description": "Update kubectl version",
      "managerFilePatterns": [
        "Containerfile"
      ],
      "matchStrings": [
        "ENV\\s+KUBECTL_V\\s+(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "kubernetes/kubernetes",
      "extractVersionTemplate": "^v?(?<version>\\d+\\.\\d+\\.\\d+)$",
      "autoReplaceStringTemplate": "ENV KUBECTL_V {{newVersion}}"
    },
    {
      "customType": "regex",
      "description": "Update Claudio Skills version",
      "managerFilePatterns": [
        "Containerfile"
      ],
      "matchStrings": [
        "ENV\\s+CLAUDIO_SKILLS_V\\s+v(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "aipcc-cicd/claudio-skills",
      "extractVersionTemplate": "^v?(?<version>\\d+\\.\\d+\\.\\d+)$",
      "autoReplaceStringTemplate": "ENV CLAUDIO_SKILLS_V v{{newVersion}}"
    }
  ],
  "packageRules": []
}
